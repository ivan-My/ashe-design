{
  "github": {
    "release": true
  },
  "git": {
    "commitMessage": "release: v${version}"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "echo 更新版本成功"
  },
  "plugins": {
    "@release-it/conventional-changelog": {

      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
         "preset": {
        "name": "conventionalcommits",
        "types": [{
          "type": "feat",
          "section": "✨新功能"
        },
          {
            "type": "fix",
                     "section": "🐛问题修复"
          },
          {
            "type": "chore",
                     "section": "213423"
          }
        ]



      }
    }
  }
}
